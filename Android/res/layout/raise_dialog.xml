<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#01000000" >

     <TextView
        android:id="@+id/raiseDialogAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="#FFB00F"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     

    <SeekBar
        android:id="@+id/raiseAmountSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/raiseDialogAmountLabel"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:progress="0"/>
    
    <View
 		android:id="@+id/raiseDialogButtonsHelper"
 		android:layout_width="0dp"
 		android:layout_height="0dp"
 		android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/raiseDialogOKButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/raiseDialogButtonsHelper"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/button_selector"
        android:src="@drawable/ic_accept_login_icon" />

    <ImageButton
        android:id="@+id/raiseDialogCancelButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/raiseDialogOKButton"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/raiseDialogButtonsHelper"
        android:background="@drawable/button_selector"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_negative_small" />

</RelativeLayout>