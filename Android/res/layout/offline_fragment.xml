<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/newOfflineUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_register_icon"
        android:padding="9dp" />

    <EditText
        android:id="@+id/offlineUsernameTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/newOfflineUserName"
        android:ems="10"
        android:hint="@string/offlineUserHint" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/offlineUsernameTextField"
        android:layout_alignRight="@id/offlineUsernameTextField"
        android:layout_below="@id/offlineUsernameTextField"
        android:background="#333333"
        android:src="@drawable/ic_add_funds" />
    <View
 		android:id="@+id/buttons2_helper"
 		android:layout_width="0dp"
 		android:layout_height="0dp"
 		android:layout_centerHorizontal="true" />
    
    <Button
        android:id="@+id/createTableButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/buttons2_helper"
        android:text="@string/createTableString" />

    <Button
        android:id="@+id/joinTableButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttons2_helper"
        android:text="@string/joinTableString" />

</RelativeLayout>