<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table_bg" >
    
    <LinearLayout 
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/callCheckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Call/Check" />

        <Button
            android:id="@+id/foldButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Fold" />

        <Button
            android:id="@+id/raiseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Raise" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/riverLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/localPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/buttonsLayout"
        android:layout_below="@id/riverLayout" 
        android:padding="2dp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="2dp" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/player3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:padding="2dp">
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/player4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:padding="2dp">
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/player5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/player3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:padding="2dp">
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/player6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignRight="@id/player4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:padding="2dp">
    </FrameLayout>

</RelativeLayout>